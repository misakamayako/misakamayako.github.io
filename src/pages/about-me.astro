---
import Home from "../layouts/home.astro"
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import localStyle from "../styles/aboutMe.module.css"
import {FontAwesomeIcon} from '@fortawesome/react-fontawesome'
import {faGithub, faJava, faJs, faNodeJs, faPixiv, faReact} from "@fortawesome/free-brands-svg-icons";
const baseURL = import.meta.env.BASE_URL
---
<Home pageTitle="✨御坂网络-关于我✨">
    <Navigation/>
    <main class={localStyle.main}>
        <div class="container mx-auto px-6">
            <!-- 个人简介区域 -->
            <section id="about" class="mb-20">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-12 items-center">
                    <div class="md:col-span-2 flex justify-center">
                        <div class={localStyle.hexagon}>
                            <img src={`${baseURL}avatar.jpg`}
                                 alt="个人照片"
                                 class="w-full h-full object-cover">
                        </div>
                    </div>
                    <div class="md:col-span-3">
                        <h1 class="text-4xl md:text-5xl font-fira mb-4 neon-text">Mayako</h1>
                        <h2 class="text-2xl md:text-3xl font-fira text-secondary mb-6">全栈开发工程师</h2>
                        <p class="text-lg mb-8 leading-relaxed break-all whitespace-pre-line" lang="latin">
                            Mayako Componere‑nata de Domus Misaka,
                            Primus Eorum Nomine,
                            Reacta‑tactus,
                            Algorithmi‑peritus,
                            Dominus Domini DOM et Circuli UI Composabilium,
                            Custos ViewModelorum et Fangorum,
                            Fractus Insectus CSS,
                            Creator Functionum @Composable et React Componentium,
                            Et Artifex Imaginis Generativae, cuius visiones in templo virtuali exhibentur.
                        </p>
                        <div class="flex space-x-6">
                            <a href="https://github.com/misakamayako/"
                               class="social-icon text-2xl text-light hover:text-secondary" target="_blank">
                                <FontAwesomeIcon icon={faGithub} className="w-4 hover:text-[#181717] hover:bg-white rounded-full "/>
                            </a>
                            <a href="https://www.pixiv.net/users/16115771"
                               class="social-icon text-2xl text-light hover:text-secondary" target="_blank">
                                <FontAwesomeIcon icon={faPixiv} className="w-4 hover:text-[#0096FA]"/>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
            <section id="projects" class="mb-20">
                <h2 class="text-3xl font-fira mb-12 text-center neon-text">精选项目</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <div class="project-card glass-card rounded-xl p-6">
                        <div class="mb-4 overflow-hidden rounded-lg">
                            <img src="/img/matewind.png"
                                 alt="项目预览"
                                 class="w-full h-full object-cover">
                        </div>
                        <h3 class="text-xl font-fira mb-2">matewind</h3>
                        <p class="text-gray-400 mb-4">基于tailwind css制作的material风格的ui组件库</p>
                        <div class="flex justify-between items-center">
                            <div class="flex space-x-2">
                                <span class="text-xs tech-tag px-2 py-1 rounded">tailwind css</span>
                                <span class="text-xs tech-tag px-2 py-1 rounded">React</span>
                            </div>
                            <a href="https://github.com/misakamayako/matewind"
                               target="_blank"
                               rel="noreferrer"
                               class="text-secondary hover:underline flex items-center">
                                <i class="fab fa-github mr-1"></i> 查看代码
                            </a>
                        </div>
                    </div>
                    <div class="project-card glass-card rounded-xl p-6">
                        <div class="mb-4 overflow-hidden rounded-lg">
                            <img src="/img/mayako.space.png"
                                 alt="项目预览"
                                 class="w-full h-full object-cover">
                        </div>
                        <h3 class="text-xl font-fira mb-2">mayako.space</h3>
                        <p class="text-gray-400 mb-4">基于Astro的个人博客</p>
                        <div class="flex justify-between items-center">
                            <div class="flex space-x-2">
                                <span class="text-xs tech-tag px-2 py-1 rounded">Astro</span>
                                <span class="text-xs tech-tag px-2 py-1 rounded">React</span>
                            </div>
                            <a href="https://github.com/misakamayako/mayako.space"
                               class="text-secondary hover:underline flex items-center">
                                <FontAwesomeIcon icon={faGithub} className="w-4"/>
                                查看代码
                            </a>
                        </div>
                    </div>
                    <div class="project-card glass-card rounded-xl p-6">
                        <div class="mb-4 overflow-hidden rounded-lg">
                            <img src="/img/powerTrack.png"
                                 alt="项目预览"
                                 class="w-full h-full object-cover">
                        </div>
                        <h3 class="text-xl font-fira mb-2">PowerTrack</h3>
                        <p class="text-gray-400 mb-4">本地化记录健身数据的App</p>
                        <div class="flex justify-between items-center">
                            <div class="flex space-x-2">
                                <span class="text-xs tech-tag px-2 py-1 rounded">Kotlin</span>
                                <span class="text-xs tech-tag px-2 py-1 rounded">Jetpack Compose</span>
                            </div>
                            <a href="https://github.com/misakamayako/PowerTrack"
                               class="text-secondary hover:underline flex items-center">
                                <FontAwesomeIcon icon={faGithub} className="w-4"/>
                                查看代码
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <!-- 联系方式 -->
            <section id="contact" class="glass-card rounded-xl p-12">
                <h2 class="text-3xl font-fira mb-8 text-center neon-text">联系我</h2>
                <div class="flex flex-col items-center">
                    <div class="text-xl mb-8">
                        <a href="mailto:misakamayaco@qq.com"
                           class="text-secondary hover:underline">misakamayaco@qq.com</a>
                    </div>
                    <div class="flex flex-wrap justify-center gap-3 mb-8">
                        <a href="https://ecma-international.org/" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#F7DF1E">
                            <FontAwesomeIcon icon={faJs} className={localStyle.techIcon}/> JavaScript
                        </a>
                        <a href="https://www.typescriptlang.org/" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#3178C6">
                            <svg role="img" viewBox="0 0 24 24" class={localStyle.techIcon}
                                 xmlns="http://www.w3.org/2000/svg">
                                <title>TypeScript</title>
                                <path fill="currentColor"
                                      d="M1.125 0C.502 0 0 .502 0 1.125v21.75C0 23.498.502 24 1.125 24h21.75c.623 0 1.125-.502 1.125-1.125V1.125C24 .502 23.498 0 22.875 0zm17.363 9.75c.612 0 1.154.037 1.627.111a6.38 6.38 0 0 1 1.306.34v2.458a3.95 3.95 0 0 0-.643-.361 5.093 5.093 0 0 0-.717-.26 5.453 5.453 0 0 0-1.426-.2c-.3 0-.573.028-.819.086a2.1 2.1 0 0 0-.623.242c-.17.104-.3.229-.393.374a.888.888 0 0 0-.14.49c0 .196.053.373.156.529.104.156.252.304.443.444s.423.276.696.41c.273.135.582.274.926.416.47.197.892.407 1.266.628.374.222.695.473.963.753.268.279.472.598.614.957.142.359.214.776.214 1.253 0 .657-.125 1.21-.373 1.656a3.033 3.033 0 0 1-1.012 1.085 4.38 4.38 0 0 1-1.487.596c-.566.12-1.163.18-1.79.18a9.916 9.916 0 0 1-1.84-.164 5.544 5.544 0 0 1-1.512-.493v-2.63a5.033 5.033 0 0 0 3.237 1.2c.333 0 .624-.03.872-.09.249-.06.456-.144.623-.25.166-.108.29-.234.373-.38a1.023 1.023 0 0 0-.074-1.089 2.12 2.12 0 0 0-.537-.5 5.597 5.597 0 0 0-.807-.444 27.72 27.72 0 0 0-1.007-.436c-.918-.383-1.602-.852-2.053-1.405-.45-.553-.676-1.222-.676-2.005 0-.614.123-1.141.369-1.582.246-.441.58-.804 1.004-1.089a4.494 4.494 0 0 1 1.47-.629 7.536 7.536 0 0 1 1.77-.201zm-15.113.188h9.563v2.166H9.506v9.646H6.789v-9.646H3.375z"/></svg>
                            TypeScript
                        </a>
                        <a href="https://react.dev/" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#61DAFB">
                            <FontAwesomeIcon icon={faReact} className={localStyle.techIcon}/> React
                        </a>
                        <a href="https://nodejs.org/" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#5FA04E">
                            <FontAwesomeIcon icon={faNodeJs} className={localStyle.techIcon}/> Node.js
                        </a>
                        <a href="https://kotlinlang.org/" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#7F52FF">
                            <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                                 class={localStyle.techIcon}>
                                <title>Kotlin</title>
                                <path fill="currentColor" d="M24 24H0V0h24L12 12Z"/>
                            </svg>
                            Kotlin
                        </a>
                        <a href="https://developer.android.com/compose" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#4285F4">
                            <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                                 class={localStyle.techIcon}>
                                <title>Jetpack Compose</title>
                                <path fill="currentColor" d="M12.135.003a2.577 2.577 0 0 0-1.42.344L2.55 5.06a2.577 2.577 0 0 0-.953.967l3.957 2.17a1.765 1.765 0 0 1 .603-.588l4.951-2.86a1.761 1.761 0 0 1 1.76 0l4.951 2.86a1.753 1.753 0 0 1 .526.46l3.921-2.265a2.577 2.577 0 0 0-.816-.744L13.291.347a2.577 2.577 0 0 0-1.152-.34Zm-.145 4.912a1.36 1.36 0 0 0-.68.182L6.36 7.953a1.345 1.345 0 0 0-.454.435l1.92 1.055a1.05 1.05 0 0 1 .31-.275l3.34-1.928a1.054 1.054 0 0 1 1.051 0l3.336 1.928a1.066 1.066 0 0 1 .238.199l.018-.01-.002-.002 1.877-1.08a1.353 1.353 0 0 0-.373-.322l-4.95-2.86a1.357 1.357 0 0 0-.68-.178Zm10.432 1.149-3.92 2.26a1.757 1.757 0 0 1 .2.812v5.715c0 .627-.332 1.21-.88 1.528l-4.95 2.86a1.761 1.761 0 0 1-.64.214v4.524a2.577 2.577 0 0 0 1.059-.313l8.162-4.713a2.577 2.577 0 0 0 1.289-2.23V7.297a2.577 2.577 0 0 0-.318-1.228Zm-20.937.238a2.577 2.577 0 0 0-.227.99v9.43c0 .918.491 1.767 1.293 2.229l8.162 4.713a2.57 2.57 0 0 0 1.225.336v-4.531a1.761 1.761 0 0 1-.833-.235L6.156 16.38a1.765 1.765 0 0 1-.877-1.528V9.136a1.776 1.776 0 0 1 .131-.676Zm16.67 2.223-1.89 1.092a1.058 1.058 0 0 1 .124.46v3.856c0 .378-.2.72-.526.907l-3.336 1.93a1.04 1.04 0 0 1-.295.107v2.17c.152-.027.304-.078.44-.157l4.949-2.859a1.36 1.36 0 0 0 .68-1.18V9.136a1.36 1.36 0 0 0-.147-.607Zm-12.387.13a1.36 1.36 0 0 0-.088.481v5.715a1.36 1.36 0 0 0 .68 1.18l4.95 2.86c.194.112.412.166.627.177v-2.174a1.054 1.054 0 0 1-.46-.123L8.14 14.843a1.054 1.054 0 0 1-.532-.908v-3.853a.99.99 0 0 1 .077-.38l-.034-.013z"/></svg>
                            Jetpack Compose
                        </a>
                        <a href="https://spring.io/" target="_blank" class=`px-3 py-1 ${localStyle.techText}` style="--themeColor:#6DB33F">
                            <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                                 class={localStyle.techIcon}>
                                <title>Spring</title>
                                <path fill="currentColor" d="M21.8537 1.4158a10.4504 10.4504 0 0 1-1.284 2.2471A11.9666 11.9666 0 1 0 3.8518 20.7757l.4445.3951a11.9543 11.9543 0 0 0 19.6316-8.2971c.3457-3.0126-.568-6.8649-2.0743-11.458zM5.5805 20.8745a1.0174 1.0174 0 1 1-.1482-1.4323 1.0396 1.0396 0 0 1 .1482 1.4323zm16.1991-3.5806c-2.9385 3.9263-9.2601 2.5928-13.2852 2.7904 0 0-.7161.0494-1.4323.1481 0 0 .2717-.1234.6174-.2469 2.8398-.9877 4.1732-1.1853 5.9018-2.0743 3.2349-1.6545 6.4698-5.2844 7.1118-9.0379-1.2347 3.6053-4.9881 6.7167-8.3959 7.9761-2.3459.8643-6.5685 1.7039-6.5685 1.7039l-.1729-.0988c-2.8645-1.4076-2.9632-7.6304 2.2718-9.6306 2.2966-.889 4.4696-.395 6.9637-.9877 2.6422-.6174 5.7043-2.5929 6.939-5.1857 1.3828 4.1732 3.062 10.643.0493 14.6434z"/></svg>
                            Spring
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <Footer/>
</Home>